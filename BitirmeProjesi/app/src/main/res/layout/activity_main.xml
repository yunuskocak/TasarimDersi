<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kullanıcı Adı"
        android:id="@+id/textView"
        android:layout_x="35dp"
        android:layout_y="146dp"
        android:textStyle="bold|normal|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_x="155dp"
        android:layout_y="143dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_x="158dp"
        android:layout_y="196dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Şifre"
        android:id="@+id/textView2"
        android:layout_x="35dp"
        android:layout_y="196dp"
        android:textStyle="bold|normal|italic" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Giriş"
        android:id="@+id/btnGiris"
        android:layout_x="244dp"
        android:layout_y="285dp" />

    <Button
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:text="Şifre Hatırlat"
        android:id="@+id/btnSifreHatirlat"
        android:layout_x="80dp"
        android:layout_y="285dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LMS Sistemi"
        android:id="@+id/textView7"
        android:layout_x="83dp"
        android:layout_y="49dp"
        android:textIsSelectable="false"
        android:textSize="50dp"
        android:textStyle="bold|normal|italic" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beni Hatırla"
        android:id="@+id/checkBox"
        android:layout_x="38dp"
        android:layout_y="246dp"
        android:checked="false" />

</AbsoluteLayout>